<h2>Clients List</h2>
<table>
    <thead>
    <tr>
        <th>
            Email:
        </th>
        <th>
            Name:
        </th>
        <th>
            Next contact date:
        </th>
        <th>
           
        </th>
    </tr>
    </thead>
    <tbody>
        {{#each clients}}
            <tr>
                <th>
                    <a href="mailto:{{this.email}}" target="_blank">{{this.email}}</a>
                </th>
                <td>
                    <a href="/client/{{this.id}}">{{this.name}}</a>
                </td>
                <td>
                    {{this.nextContactAt}}
                </td>
                <td>
                    <a href="/client/{{this.id}}">Details</a>
                    <form method="POST" action="/client/{{this.id}}?_method=DELETE">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>

<p>
    <form action="/client/form/add">
        <button type="submit">Add new Client</button>
    </form>
</p>
