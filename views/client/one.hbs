<h2>{{client.name}}</h2>
<table class="header-of-left">
    <tbody>
            <tr>
                <th>
                   E-mail
                </th>
                <td>
                    <a href="mailto:{{client.email}}" target="_blank">{{client.email}}</a>
                </td>
            </tr>
            <tr>
                <th>
                    Name
                </th>
                <td>
                    {{client.name}}
                </td>
            </tr>
            <tr>
                <th>
                    Next contact date
                </th>
                <td>
                    {{client.nextContactAt}}
                </td>
            </tr>
            {{#if client.notes}}
                <tr>
                    <th>
                        Notes
                    </th>
                    <td>
                        {{client.notes}}
                    </td>
                </tr>
            {{/if}}
    </tbody>
</table>